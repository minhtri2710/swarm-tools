{
  "name": "swarm-mail",
  "version": "1.4.0",
  "description": "Event sourcing primitives for multi-agent coordination. Local-first, no external servers.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "swarm-mail-daemon": "./bin/daemon-cli.ts",
    "swarm-db": "./bin/swarm-db.ts"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joelhooks/opencode-swarm-plugin"
  },
  "author": "Joel Hooks",
  "license": "MIT",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --external @libsql/client --external @electric-sql/pglite && tsc",
    "test": "bun test src/streams/ src/memory/ src/hive/ --timeout 60000",
    "test:beads": "bun test src/beads/ --timeout 60000",
    "test:integration": "vitest run src/streams/**/*.integration-test.ts --testTimeout 60000",
    "test:all": "bun test src/ --timeout 60000",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@libsql/darwin-arm64": "^0.5.22",
    "debug": "^4.4.3",
    "drizzle-orm": "^0.41.0",
    "effect": "^3.19.12",
    "minimatch": "^10.1.1",
    "nanoid": "^5.1.6",
    "proper-lockfile": "^4.1.2",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.3",
    "@types/proper-lockfile": "^4.1.4",
    "bun-types": "^1.3.4",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
